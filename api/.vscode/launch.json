{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Uvicorn",
          "type": "python",
          "request": "launch",
          "module": "uvicorn",
          "args": [
              "app:app",
              "--env-file",
              "../.env",
              "--reload"
          ],
          "python": "${command:python.interpreterPath}",
          "cwd": "${workspaceFolder}/src",
          "env": {
              "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
          },
          "justMyCode": false
      }
  ]
}
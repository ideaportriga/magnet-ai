# PostgreSQL Database Configuration for Docker Compose
POSTGRES_DB=magnet_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST_AUTH_METHOD=md5
POSTGRES_PORT=5432

# API Configuration
API_PORT=5000
ENV=development

# Web Configuration
WEB_PORT=80
WEB_ADMIN_PORT=3001
WEB_PANEL_PORT=3002

# Database initialization options (choose one scenario)

# Option 1: First-time setup (recommended for new installations)
# Creates initial migration and applies it, then loads sample data
INIT_DB=false
RUN_FIXTURES=false

# Option 2: Apply existing migrations only (for updates)
# Use when you have existing migration files and want to update schema
RUN_MIGRATIONS=false

# Option 3: Complete database reset (DESTRUCTIVE!)
# Removes all migrations, recreates from scratch - USE WITH CAUTION!
RESET_DB=false

# Load test data (can be used with any option above)
# RUN_FIXTURES=true

# Note: Database connection parameters (DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD) 
# are automatically set in docker-compose.yml from the POSTGRES_* variables above.
# Additional configuration should be added to api/.env file.